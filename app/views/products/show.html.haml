.show_preview
  .header
    = render 'header'
  .products
    .products__name
      = @product.name
    .contents
      
      .first_content
        = image_tag @product.images[0].image_url, id: "main_image"
      .sub_image
        - @product.images.each_with_index do |image, i|
          .sub_image_content
            = image_tag image.image_url, id: "image#{i+1}"
            
      .price
        = @product.price
        円
        .price__payer
          .price__payer__tax
            (税込）
          .price__status__postage
            送料込み
        
      - if user_signed_in? && current_user.id == @product.user_id
        .buy
          .edit-btn
            = link_to '編集する', edit_product_path(@product.id), class: 'edit'
        .buy
          .delete-btn
            = link_to 'この商品を削除する', product_path(@product.id), method: :delete, class:'delete'
      - elsif user_signed_in? 
        .buy
          = link_to '購入画面に進む',  confirm_product_path, class: 'buy_btn'
      - else
        = link_to 'ログインへ', new_user_session_path
      .second_content
        .products_info
          %table
            %tr
              %th
                出品者
              %td
                = @product.user.nickname
            %tr
              %th
                カテゴリー
              %td
                = @product.category.name
            %tr
              %th
                商品のサイズ
              %td
                = @product.size.name
            %tr
              %th
                商品の状態
              %td
                = @product.condition.name
            %tr
              %th
                配送料の負担
              %td
                = @product.payer.name
            %tr
              %th
                発送元地域
              %td
                = @product.shippingaddress.name
            %tr
              %th
                発送予定日数
              %td
                = @product.shippingdate.name
      .option
        %ul.likes
          %i.fas.fa-star
          %li お気に入り 0
        %ul.report
          %i.fas.fa-flag
          %li 不適切な商品の通報

    .comment
      .comment__field
        .comment__field__info
          .user_name
            フリマさん
          .create_date
            2020年2月3日
        .comment__field__text
          お気に入りです。
        .comment__field__info
          .user_name
            フリマさん
          .create_date
            2020年2月3日
        .comment__field__text
          お気に入りです。
          
      .form
        = form_with local: true do |f|
          = f.text_area :detail, class: 'text_area'
          .text_note
            相手のことを考え丁寧なコメントを心がけましょう。
            %br/
            不快な言葉遣いなどは利用制限や退会処分となることがあります。
          = f.submit 'コメントする',class: 'send_btn'
  %ul.btn
    %li
      = link_to '< 前へ', '#',class: 'left_btn'
    %li
      = link_to '次へ >', '#',class: 'right_btn'
  .item_more
    = link_to 'もっと見る','#',class: 'item_more__btn'
  .footer
    = render 'footer'